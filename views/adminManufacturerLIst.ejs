<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Cyber Cars</title>
</head>
<body>
    <%- include('partials/navbar', {
        nav: {
            addCar: '/admin/car',
            addMnfctr: '/admin/manufacturer',
            cars: '/admin/car/update',
            manufacturers: '/admin/manufacturer/update',
            search: '/admin/search',
            users: '/admin/customerDetails',
            messages: '/admin/message',
            status: '/admin/carstatus',
            logout: '/admin/logout'
        },
        active: 'manufacturers'
    }) %>
    <div class="container">
        <h2>Manufacturers</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

        
            <% for(var i = 0; i < data.length; i++) { %>
                <tr>
               <td> <%= data[i].name %> </td>
                <td> <%= data[i].country %></td>
                <td> <a href="/admin/manufacturer/update/<%= data[i].manufacturerID %>">Edit </a></td> 
                <td><a href="/admin/manufacturer/delete/<%= data[i].manufacturerID %>"  Onclick="return ConfirmDelete();">Delete</a></td>
                </tr>
                 <% } %>
        
    </table>
    </div>
    <script>
        function ConfirmDelete()
        {
          var x = confirm("Are you sure you want to delete?");
          if (x)
              return true;
          else
            return false;
        }
    </script> 
</body>
</html>