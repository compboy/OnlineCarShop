<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Cyber Cars</title>
</head>
<body>
    <%- include('partials/navbar', {
        nav: {
            addCar: '/admin/car',
            addMnfctr: '/admin/manufacturer',
            cars: '/admin/car/update',
            manufacturers: '/admin/manufacturer/update',
            search: '/admin/search',
            users: '/admin/customerDetails',
            messages: '/admin/message',
            status: '/admin/carstatus',
            logout: '/admin/logout'
        },
        active: 'messages'
    }) %>
    <div class="container">
        <h2>Messages</h2>
        <div class="table-data">
            <form action="/admin/message" method="get">
                <select id="sortType" name="sortType">
                    <option>Sort by....</option>
                    <option value="modelasc">Model (A-Z)</option>
                    <option value="modeldesc">Model (Z-A)</option>
                    <option value="dateasc">Old->New</option>
                    <option value="datedesc">New->Old</option>
                </select>
                <div>
                    <button type="submit">Sort</button>
                </div>
            </form>
            <table>
                <tr>
                    <th>Message</th>
                    <th>Car Model</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
                <% for(var i = 0; i < data.length; i++) { %>
                    <tr>
                    <td> <%= data[i].message %></td>
                   <td><%= data[i].model %></td>
                   <td> <%= data[i].date %> </td>
                    <td><a href="/admin/message/delete/<%=data[i].messageID%>">Delete</a></td>
                    </tr>
                <% } %>
        </table>
        </div>
    </div>
    
</body>
<script>
    function ConfirmDelete()
    {
      var x = confirm("Are you sure you want to delete?");
      if (x)
          return true;
      else
        return false;
    }
</script> 
</html>